<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<h3>Edit Your Review for <%= @review.restaurant.name %></h3>
<h5>From
  <% if @review.created_at = @review.updated_at %>
    <%= @review.created_at.strftime("%B %d, %Y") %><br>
  <% else %>
    <%= @review.updated_at.strftime("%B %d, %Y") %><br>
  <% end %>
</h5>

<%= form_for @review do |f| %>
  <%= f.label :content, "Write a Review" %><br>
  <%= f.text_area :content %><br>
  <%= f.label :rating %><br>
  <%= f.number_field :rating %>
  <%= f.hidden_field :user_id, :value => @review.user.id %>
  <%= f.hidden_field :restaurant_id, :value => @review.restaurant.id %>
  <%= f.submit "Edit Review" %>
<% end %>
