<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<h1>Edit</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
  <br><br>
  Leave password blank if you wish to keep your old password<br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Edit" %>
<% end %>
